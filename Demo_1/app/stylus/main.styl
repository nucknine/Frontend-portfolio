//preloader
.preloader-page
	position fixed
	left 0
	top 0
	right 0
	bottom 0
	background linear-gradient(45deg, white, bluecolor)
	background white
	z-index 999
	&__preloader-dots
		position absolute
		top 50%
		left 50%
		height 52px
		width 120px
	&__dot
		display inline-block
		background bluecolor
		height 20px
		width 20px
		opacity 0.3
		border-radius 50%
		animation up-and-down 2s infinite
		&:nth-child(2)
			animation-delay .15s
		&:nth-child(3)
			animation-delay .3s
		&:nth-child(4)
			animation-delay .45s
		&:nth-child(5)
			animation-delay .6s

@keyframes up-and-down {
	0%{
		transform: translateY(0px);
	}
	35%{
		transform: translateY(0px);
		opacity: 0.3;
	}
	50%{
		transform: translateY(-20px);
		opacity: 0.8;
	}
	70%{
		transform: translateY(3px);
		opacity: 0.8;
	}
	85%{
		transform: translateY(-3px);
	}
}

