//triangle
  triangle(w=20, color=black, nav=top)
    w = unit(w, px)
    display block
    width 0px
    height 0px
    border-top: w solid transparent
    border-right: w solid transparent
    border-bottom: w solid transparent
    border-left: w solid transparent
    border-{nav}: w solid color



//grid mixin float
grid-float(n=2, m=20, x=1)
  if x == 'stick'
    x = 0
  m = unit(m,px)
  box-sizing border-box
  float left
  if x
    margin-right (m / 2)
    // margin-left (m / 2)
    width "calc((100% - %s * %s) / %s)" % (m n n)
  else
    margin-right m
    width "calc((100% - %s * (%s - 1)) / %s)" % (m n n)
  margin-left ((m * x) / 2)
  &:nth-child({n}n+{n})
    margin-right 0px

//clearfix
clrf()
  &::after
    content ""
    clear both
    display table

//grid mixin inline-block
grid-inline(n=2, m=20, x=1)
  if x == 'stick'
    x = 0
  m = unit(m,px)
  display inline-block
  vertical-align top
  box-sizing border-box
  if x
    margin-right (m / 2)
    width "calc((100% - %s * %s) / %s)" % (m n n)
    &:nth-child(n)
      margin-right (m / 2)
  else
    margin-right m
    &:nth-child(n)
      margin-right m
    width "calc((100% - %s * (%s - 1)) / %s)" % (m n n)
  margin-left ((m * x) / 2)
  &:nth-child({n}n+{n})
    margin-right 0px


size(w=100%, h=auto)
  width w
  height h

red(color=red)
  background color

font()
  font-family 'Open Sans', sans-serif, Arial
  font-size 14px
  font-weight normal

inline()
  display inline-block
  vertical-align top

shadow-btn()
  box-shadow 0 10px 15px rgba(0,0,0,0.4)

btn()
  inline()
  box-sizing border-box
  cursor pointer
  height 60px
  line-height 60px
  text-align center
  text-decoration none
  min-width 170px
  background-color gray
  padding-left 20px
  padding-right 20px
  font-size 18px
  color white
  border-radius 30px
  transition box-shadow 0.3s ease-out
  &:hover
    shadow-btn()
  &_red
    background-color rgba(255,86,86,.8)
  &_blue
    background-color rgba(106,126,252,.8)

//adaptive media
adaptive(media)
  if media == smart
    // @media only screen and (min-device-width: 320px) and (max-device-width: 568px) and (-webkit-min-device-pixel-ratio: 2) {block}
    @media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {block}
  else if media == tablet
    @media only screen and (min-width: 481px) and (max-width: 1024px) {block}
  else if media == pc
    @media only screen and (min-width: 1025px) {block}

// Fonts mixin
font-url(file)
  return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
  @font-face
    font-family family
    src url(font-url(file + '.eot'))
    src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
        url(font-url(file + '.woff')) format('woff'),
        url(font-url(file + '.ttf')) format('truetype'),
        url(font-url(file + '.svg#'+ family)) format('svg')
    font-weight weight
    font-style normal
  if hack-chrome-windows
    @media screen and (-webkit-min-device-pixel-ratio:0)
      @font-face
        font-family family
        src url(font-url(file + '.svg#'+ family)) format('svg')

spriteWidth($sprite)
    width $sprite[4]

spriteHeight($sprite)
    height $sprite[5]

spritePosition($sprite)
    background-position $sprite[2] $sprite[3]

spriteImage($sprite)
    background-image url($sprite[8])

sprite($sprite)
    if !match('hover', selector()) && !match('active', selector())
        spriteImage($sprite)
    spritePosition($sprite)
    spriteWidth($sprite)
    spriteHeight($sprite)