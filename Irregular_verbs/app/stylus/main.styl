@import "mixins"
@import "sprite"
@import "variables"

//fonts
webfont('Opensans_regular', 'opensans', true, 'normal')
webfont('Opensans_bold', 'opensansbold', true, 'normal')

font_h4_opensans_bold()
	font-family 'Opensans_bold', sans-serif
	font-size 26px
	line-height 1.2

font_h2_opensans_bold()
	font-family 'Opensans_bold', sans-serif
	font-size 68px
	line-height 1.2

font_p_opensans_bold()
	font-family 'Opensans_bold', sans-serif
	font-size 16px
	line-height 1.45

font_p_opensans_regular()
	font-family 'Opensans_regular', sans-serif
	font-size 16px
	line-height 1.45


font_h4_opensans_regular()
	font-family 'Opensans_regular', sans-serif
	font-size 26px
	line-height 1.2

font_h3_opensans_regular()
	font-family 'Opensans_regular', sans-serif
	font-size 42px
	line-height 1.2

font_h2_opensans_regular()
	font-family 'Opensans_regular', sans-serif
	font-size 68px
	line-height 1.2

font_h1_opensans_regular()
	font-family 'Opensans_regular', sans-serif
	font-size 110px
	line-height 1.2

//document css

// html
	// height 100%

body
	overflow hidden
	background linear-gradient(to right, main_one, main_two)
	+adaptive(tablet)
		overflow-y auto

.pattern
	z-index -1
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	opacity 0.4
	background url('../img/england-pattern-white.png')

/*Header*/
.header
	width 100%
	margin-bottom 50px
	font_p_opensans_regular()
	text-align center
	+adaptive(tablet)
		margin-bottom 0px

.nav
	display inline-block
	color light
	&__nav-row
		display block
	&__nav-list
		margin-right 20px
		display inline-block
		list-style none
		&:last-child
			margin-right 0
	&__nav-link
		transition-cubic()
		transition all 0.3s
		color lighten(light, 30%)
		text-decoration none
		// text-shadow 1px 1px 2px rgba(dark, 0.4);
		&:hover
			// text-shadow none
			color dark

/*Footer*/
.footer
	z-index 1
	position absolute
	bottom 12px
	left 0
	width 100%
	text-align center
	+adaptive(tablet)
		position relative

.footer-copy
	font_p_opensans_regular()
	color light
	position relative
	&__link
		color light
		transition-cubic()
		transition color 0.3s
		color lighten(light, 30%)
		text-decoration none
		&:hover
			color dark

.social-icons
	display inline-block
	&__icon
		display inline-block
		margin-right 12px
		&:last-child
			margin-right 0
	&__link
		transition-cubic()
		transition color 0.3s
		text-decoration none
		color light
		&:hover
			color dark

.icon
	font-size 24px

/*Main Content*/
.content-section
	position relative
	display block
	height auto
	width 1170px
	margin 0 auto
	margin-bottom 50px
	+adaptive(tablet)
		width 100%

.content
	width 770px
	min-height 250px
	margin 0 auto
	background rgba(main_one, .7)
	box-shadow 0px 8px 5px -5px rgba(0, 0, 0, 0.4)
	padding 20px
	+adaptive(tablet)
		width 95%
		padding 10px 10px 10px 10px

.form
	position relative
	outline none
	padding 0
	margin 0
	font-size 0
	box-sizing border-box
	width 100%
	&__input-text
		display inline-block
		vertical-align top
		box-sizing border-box
		width 80%
		margin 0
		padding 7px
		height 48px
		border 5px solid transparent
		font_p_opensans_regular()
		&:focus
			outline none
			border 5px solid main_two
		+adaptive(smart)
			width 100%
	&__input-submit
		text-transform uppercase
		font_p_opensans_bold()
		z-index 1
		position relative
		overflow hidden
		display inline-block
		box-sizing border-box
		vertical-align top
		padding 7px
		margin 0
		box-sizing border-box
		color rgba(main_one, 0.8)
		cursor pointer
		height 48px
		width 20%
		border none
		background rgba(main_two, 1)
		transition-cubic()
		transition border-color 0.3s, color 0.3s
		border 6px solid main_two
		&::before
			content ""
			position absolute
			top 0
			left 0
			width 150%
			height 100%
			z-index -1
			background dark
			transform rotate3d(0, 0, 1, -45deg) translate3d(0, -3em, 0)
			transform-origin 0% 100%
			transition transform 0.3s, opacity 0.3s, background-color 0.3s
		&:hover
			color main_two
			&::before
				border-color main_two
				opacity 1
				background-color rgba(main_one, .8)
				transform rotate3d(0, 0, 1, 0deg)
				transition-timing-function cubic-bezier(0.2, 1, 0.3, 1)
		&:active
			background lighten(main_two, 15%)
		+adaptive(smart)
			width 100%


.result-table
	width 100%
	border-collapse collapse
	margin-top 20px
	font_p_opensans_regular()
	+adaptive(tablet)
		margin-top 6px
		display block
	&_hide
		display none
	&__row-head
		cursor pointer
		border-bottom 2px solid main_one
		+adaptive(tablet)
			display block
			border-bottom 0px solid main_two
	&__row-body
		+adaptive(tablet)
			display block
	&__tb-row
		word-wrap: break-word
		background rgba(light, .4)
		&:nth-of-type(odd)
			background rgba(light, .8)
		&:hover
			background rgba(main_two, .9)
		+adaptive(tablet)
			display block
			background none
			border-bottom 6px solid rgba(main_one, .8)
			&:nth-last-child(1)
				border-bottom none
			&:nth-of-type(odd)
				background transparent
			&:hover
				background transparent
	&__th-row
		+adaptive(tablet)
			display block
			position absolute
			top -9999px
			left -9999px
	&__tb-field
		text-align center
		padding 6px
		color dark
		+adaptive(tablet)
			display block
			border none
			position relative
			padding-left 50%
			background rgba(light, .4)
			&:last-child
				border-bottom none
			&:hover
				background rgba(main_two, .9)
			&:before
				line-height 35px
				border-right 2px solid main_one
				position absolute
				top 0px
				left 0px
				width 45%
				padding-right 10px
				height 100%
				white-space normal
				background rgba(light, .4)
				cursor pointer
			&:hover
				&:before
					background rgba(main_two, .9)
			&:nth-of-type(1):before
				content "Infinitive (I)"
			&:nth-of-type(2):before
				content "Past (II)"
			&:nth-of-type(3):before
				content "Past participle (III)"
			&:nth-of-type(4):before
				content "Перевод"
			&:nth-of-type(odd)
				background rgba(light, .8)
				&:hover
					background rgba(main_two, .9)
	&__th-field
		color dark
		font-weight normal
		text-align center
		padding 6px
		text-align center
		background rgba(light, .9)
		+adaptive(tablet)
			display block


.result
	&_hide
		display none
	width 100%
	margin-top 20px
	font_p_opensans_regular()
	color light
	text-align left
	&__no-matches
		text-align center
	&__list
		list-style-type none
		font_p_opensans_regular()